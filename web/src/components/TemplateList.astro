        <ul class="template-list" style={`--icon: "${icon}"`}>
            {items.map((item) => (
                <li>
                    <strong>{item.id}</strong>
                    {item.label && (
                        <span set:html={marked.parseInline(`: ${item.label}`)} />
                    )}
                </li>
            ))}
        </ul>
    )
}

<style>
    .template-list {
        list-style: none;
        font-style: italic;
        border: 1px solid var(--sl-color-white);
        padding-left: 0;
    }

    .template-list li::before {
        content: var(--icon, "‚óè");
        margin-right: 0.5rem;
        margin-left: 0.5rem;
    }

    :root[data-theme="light"] .template-list li::before {
        filter: brightness(1.1) drop-shadow(0 0 1px black);
    }

    :root[data-theme="dark"] .template-list li::before {
        filter: brightness(0.8) drop-shadow(0 0 1px white);
    }
</style>
