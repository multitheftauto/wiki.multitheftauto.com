---

{
    items.length > 0 && (
        <ul class="template-list" style={`--icon: "${icon}"`}>
            {items.map((item) => (
                <li>
                    <strong>{item.id}</strong>
                    {item.label && (
                        <span set:html={marked.parseInline(`: ${item.label}`)} />
                    )}
                </li>
            ))}
        </ul>
    )
}

<style>
    .template-list {
        list-style: none;
        font-style: italic;
        border: 1px solid var(--sl-color-white);
        padding-left: 0;
    }

